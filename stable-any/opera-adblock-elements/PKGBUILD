package() {
	depends=('opera')
	install -dm755 ${pkgdir}/usr/share/${pkgname/-elements/}
	install -m644 fanboy-adblocklist-elements-v4.css ${pkgdir}/usr/share/${pkgname/-elements/}/adblock-elements.css
}
