source=('urlfilter-main.ini')

package() {
	depends=('opera')
	install -dm755 ${pkgdir}/usr/share/${pkgname/-main/}
	install -m644 urlfilter-main.ini ${pkgdir}/usr/share/${pkgname/-main/}/urlfilter-main.ini
}
