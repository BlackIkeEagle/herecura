# Contributor: HNKNTA <hnknta@gmail.com>

pkgname=atunes
pkgver=3.0.0
pkgrel=1
pkgdesc="A full-featured audio player and manager"
arch=('any')
url="http://www.atunes.org/"
license=('GPL')
depends=('java-runtime>=6' 'mplayer')
optdepends=('cdrkit: for ripping CDs via cdda2wav'
            'vorbis-tools: for ripping Ogg Vorbis via oggenc')
source=("http://downloads.sourceforge.net/project/atunes/atunes/aTunes%20$pkgver/${pkgname}_$pkgver-1_all.deb")
sha256sums=('ea79b63fdb96f4a66ec2d6c8e8760e96e49a7eabc372f2e93bc8635d5f5187b3')

build() {
  ar x $(basename ${source[0]})
  tar zxvf data.tar.gz
  cp -rf usr/ "$pkgdir"/
}
