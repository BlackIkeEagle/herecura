# vim:set ft=sh ts=2 sw=2 et:

_uname=lyricat
_commit=e0c78bf
pkgbase=hotot
pkgname=('hotot-data' 'hotot-gtk2' 'hotot-gtk3' 'hotot-qt' 'hotot-qt5')
#true && pkgname+=('hotot-kde')
pkgver=0.9.8.13 # broken
pkgrel=2
pkgdesc="A lightweight & open source microblogging software (twitter identi.ca)"
arch=('i686' 'x86_64')
url="http://www.hotot.org/"
license=('LGPL3')
makedepends=('cmake' 'intltool' 'python2' 'qt5-webkit' 'qtwebkit')
#makedepends+=('kdebase-runtime')
install="hotot.install"
source=("https://github.com/$_uname/Hotot/tarball/$_commit")
md5sums=('6121926b8947c4093beb2ed79f10e855')

build() {
  cd ${srcdir}/$_uname-Hotot-*
  [ -d bld ] || mkdir bld && cd bld
  cmake .. -DCMAKE_INSTALL_PREFIX=/usr \
           -DWITH_GTK=ON \
           -DWITH_GTK2=ON \
           -DWITH_GTK3=ON \
           -DWITH_QT=ON \
           -DQT_QMAKE_EXECUTABLE=qmake-qt4 \
           -DWITH_QT5=ON \
           -DWITH_CHROME=OFF \
           -DPYTHON_EXECUTABLE=/usr/bin/python2
  make
}

package_hotot-data() {
  depends=('hicolor-icon-theme')

  cd ${srcdir}/$_uname-Hotot-*/bld/misc
  DESTDIR="$pkgdir/" cmake -P cmake_install.cmake

  cd ${srcdir}/$_uname-Hotot-*/bld/po
  DESTDIR="$pkgdir/" cmake -P cmake_install.cmake

  # remove google analytics tracking code (tnx to ianux)
  find "$pkgdir" -name hotot.js -exec \
    sed -i '/\/\/ 7. run track code/,+12d' {} \;
}

package_hotot-qt() {
  depends=('hotot-data' 'qtwebkit')
  cd ${srcdir}/$_uname-Hotot-*/bld/qt

  DESTDIR="$pkgdir/" cmake -P cmake_install.cmake
}

package_hotot-qt5() {
  depends=('hotot-data' 'qt5-webkit')
  cd ${srcdir}/$_uname-Hotot-*/bld/qt5

  DESTDIR="$pkgdir/" cmake -P cmake_install.cmake
}

