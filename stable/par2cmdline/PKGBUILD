# Maintainer: BlackEagle < ike DOT devolder AT gmail DOT com >
pkgname=par2cmdline
pkgver=0.5.2
pkgrel=1
pkgdesc="A file verification and repair tool"
url="https://github.com/eMPee584/par2cmdline"
license="GPL"
depends=('gcc-libs')
makedepends=()
arch=('i686' 'x86_64')
source=(
	"http://herecura.be/files/${pkgname}-${pkgver}.tar.xz"
)
sha256sums=(
	'cbb0f53332536ccf63fdfbd98b862181ab3569511a0dd7d6699fd47e21ee5cf9'
)

build() {
	cd ${pkgname}-${pkgver}
	msg "Automake"
	aclocal
	automake --add-missing
	autoconf
	msg "Configure"
	./configure --prefix=/usr
	msg "Make"
	make
}

check() {
	cd ${pkgname}-${pkgver}
	make check
}

package() {
	cd ${pkgname}-${pkgver}
	make DESTDIR=$startdir/pkg install
}
