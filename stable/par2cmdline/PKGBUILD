# Maintainer: BlackEagle < ike DOT devolder AT gmail DOT com >
pkgname=par2cmdline
pkgver=0.5
pkgrel=1
pkgdesc="A file verification and repair tool"
url="https://github.com/eMPee584/par2cmdline"
license="GPL"
depends=('gcc-libs')
makedepends=()
arch=('i686' 'x86_64')
source=(
	"https://github.com/downloads/eMPee584/par2cmdline/${pkgname}-${pkgver}.tar.xz"
)
sha256sums=(
	'44a54d81959d802af767e0c530a89c448fffd98921245e27652e5a0faff366aa'
)

build() {
	msg "Configure"
	./configure --prefix=/usr
	msg "Make"
	make
}

package() {
	make DESTDIR=$startdir/pkg install
}
