# Maintainer: Andrew Cook <ariscop@gmail.com>

pkgname=libbluray-git
pkgver=20130206
pkgrel=1
pkgdesc="Blu-Ray access library"
arch=('i686' 'x86_64')
license=('LGPL')
url="http://www.videolan.org/developers/libbluray.html"
depends=('openssl')
makedepends=('git' 'apache-ant' 'java-environment' 'freetype2')
optdepends=('libaacs' 'libbdplus' 'java-runtime')
source=()
provides=('libbluray')
conflicts=('libbluray')

_gitroot="git://git.videolan.org/libbluray.git"
_gitname="libbluray"

build() {
    msg "Connecting to GIT server..."

    if [ -d ${srcdir}/$_gitname ] ; then
        cd $_gitname && git pull origin
    else
        git clone $_gitroot
    fi

    msg "GIT checkout done or server timeout"
    msg "Starting build..."

    cd ${srcdir}/libbluray
	sed -e 's/AM_CONFIG_HEADER/AC_CONFIG_HEADERS/g' -i configure.ac
    ./bootstrap
    ./configure --prefix=/ --with-jdk=$J2SDKDIR --enable-bdjava
    make
}

package() {
    cd ${srcdir}/libbluray
    make DESTDIR=${pkgdir}/usr install
}
