pkgname=jslint
pkgver='20100714'
pkgrel=2
pkgdesc="The Javascript Code Quality Tool"
arch=('any')
url="http://jslint.com"
license=('(C)2002 Douglas Crockford')
depends=('rhino')
source=('http://www.jslint.com/rhino/jslint.js' 'jslint')
md5sums=('10af24d3b1bff6ee05c9624a19f70b6a'
         '47284ed63b5b35fd5576a83b8974dced')

build() {
	install -m 644 -D "$srcdir/jslint.js" "$pkgdir/usr/share/jslint.js"
	install -D "$srcdir/jslint" "$pkgdir/usr/bin/jslint"
}
