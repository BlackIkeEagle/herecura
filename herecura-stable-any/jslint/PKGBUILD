pkgname=jslint
pkgver='20100908'
pkgrel=1
pkgdesc="The Javascript Code Quality Tool"
arch=('any')
url="http://jslint.com"
license=('(C)2002 Douglas Crockford')
depends=('rhino')
source=("jslint${pkgver}.js::http://www.jslint.com/rhino/jslint.js" 'jslint')
sha256sums=('b7714983d378dbde161d2797bc31ede8bd7e1aaf47e16579d07a31c6e2849b08'
            'f6f19ddeb27d788ad779f06f20e768c178913bb8f2a2cfe7b88028711623c881')
author='Douglas Crockford'

build() {
	install -m 644 -D "$srcdir/jslint${pkgver}.js" "$pkgdir/usr/share/jslint.js"
	install -D "$srcdir/jslint" "$pkgdir/usr/bin/jslint"
}
