pkgname=opera-adblock-elements
pkgver=20101025
pkgrel=1
pkgdesc="Fanboy's Main AdBlock Filterset for Opera"
arch=('any')
url="http://www.fanboy.co.nz/adblock/opera/"
license=('cc-by-3.0')
depends=('opera')
install=${pkgname}.install
source=('fanboy-adblocklist-elements-v3.css')
sha256sums=('ca9f1790d6d1d9197aeb4789c13910911f42f575cec236d95bd6e30d80af1e6c')

build() {
	install -dm755 ${pkgdir}/usr/share/${pkgname/-elements/}
	install -m644 fanboy-adblocklist-elements-v3.css ${pkgdir}/usr/share/${pkgname/-elements/}/adblock-elements.css
}
