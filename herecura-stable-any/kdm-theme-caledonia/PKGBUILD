pkgname=kdm-theme-caledonia
_themename=Caledonia-KDM
pkgver=0.9
pkgrel=1
pkgdesc="The official KDM theme for Caledonia"
arch=('any')
url="http://kde-look.org/content/show.php/Caledonia+KDM?content=143130"
license=('GPL')
depends=('kdebase-workspace')
source=("${pkgname}-${pkgver}.tar.gz::http://kde-look.org/CONTENT/content-files/143130-${_themename}.tar.gz")
sha256sums=('895f6ceb57420017b43d51535ae23bd4ff4d2070d756149b8946b71d0724683e')

build() {
  true
}

package() {
  install -dm755 ${pkgdir}/usr/share/apps/kdm/themes/
  cp -a ${_themename} ${pkgdir}/usr/share/apps/kdm/themes/${pkgname/kdm-theme-/}
} 
 
 
