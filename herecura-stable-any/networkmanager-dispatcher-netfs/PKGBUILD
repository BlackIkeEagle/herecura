# Maintainer: dan saul <aur@cryingwolf.org>
pkgname=networkmanager-dispatcher-netfs
pkgver=2009.08.27
pkgrel=1
pkgdesc="Dispatcher Script for netfs"
arch=(any)
license=('BSD')
url="http://www.slello.com"
depends=('networkmanager')
source=(10-netfs)
md5sums=('351b1650c69ac794213b6a020b838b49')

build() {
  cd ${startdir}/pkg
  mkdir -p etc/NetworkManager/dispatcher.d || return 1
  cd etc/NetworkManager/dispatcher.d || return 1
  cp ${startdir}/src/10-netfs . || return 1
  chmod 700 10-netfs || return 1
}
