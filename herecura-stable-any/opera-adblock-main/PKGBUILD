pkgname=opera-adblock-main
pkgver=20101205
pkgrel=1
pkgdesc="Fanboy's Main AdBlock Filterset for Opera"
arch=('any')
url="http://www.fanboy.co.nz/adblock/opera/"
license=('cc-by-3.0')
depends=('opera')
conflicts=('opera-adblock' 'opera-adblock-complete')
replaces=('opera-adblock')
install=${pkgname}.install
source=('urlfilter.ini')
sha256sums=('d97dbcf69e8b2377279aaaaffa2787cd08feb1b140dd67c62d14dad114fd20ee')

build() {
	install -dm755 ${pkgdir}/usr/share/${pkgname/-main/}
	install -m644 urlfilter.ini ${pkgdir}/usr/share/${pkgname/-main/}/urlfilter-main.ini
}
