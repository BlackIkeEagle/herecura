pkgname=ksplash-caledonia
_themename=Caledonia-KSplash
pkgver=0.9
pkgrel=1
pkgdesc="Simple and lightweight splash screen for KDE. Official part of Caledonia Theme."
arch=('any')
url="http://kde-look.org/content/show.php/Caledonia+KSplash?content=143576"
license=('GPL')
depends=('kdebase-workspace')
source=("${pkgname}-${pkgver}.tar.gz::http://kde-look.org/CONTENT/content-files/143576-${_themename}.tar.gz")
sha256sums=('0b37163b21a7f208a031187a58d74fdfe58992fd4521de1489866e36686eb39e')

build() {
	true
}

package() {
	install -dm755 ${pkgdir}/usr/share/apps/ksplash/Themes
	cp -a ${_themename} ${pkgdir}/usr/share/apps/ksplash/Themes/${pkgname/ksplash-/}
} 
 
