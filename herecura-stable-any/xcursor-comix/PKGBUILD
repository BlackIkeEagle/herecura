pkgname=xcursor-comix
pkgver=0.7.2
pkgrel=1
pkgdesc="Comix X Cursor Theme"
url="http://www.kde-look.org/content/show.php/ComixCursors?content=32627"
depends=()
license=('GPL')
arch=('any')
source=(http://www.limitland.de/comixcursors/ComixCursors-${pkgver}.tar.bz2)
