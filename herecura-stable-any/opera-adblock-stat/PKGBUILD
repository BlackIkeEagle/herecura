pkgname=opera-adblock-stat
pkgver=20101025
pkgrel=1
pkgdesc="Fanboy's Main AdBlock Filterset for Opera"
arch=('any')
url="http://www.fanboy.co.nz/adblock/opera/"
license=('cc-by-3.0')
depends=('opera')
conflicts=('opera-adblock' 'opera-adblock-complete')
replaces=('opera-adblock-complete')
install=${pkgname}.install
source=('urlfilter.ini')
sha256sums=('ef853ad374339e890687bf106f83542b71b204881a98b762a3d6c1afcaf6f2b3')

build() {
	install -dm755 ${pkgdir}/usr/share/${pkgname/-stat/}
	install -m644 urlfilter.ini ${pkgdir}/usr/share/${pkgname/-stat/}/urlfilter-stat.ini
}
