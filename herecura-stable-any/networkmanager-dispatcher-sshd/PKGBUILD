# Maintainer: dan saul <aur@cryingwolf.org>
pkgname=networkmanager-dispatcher-sshd
pkgver=2009.08.27
pkgrel=1
pkgdesc="Dispatcher Script for sshd"
arch=(any)
license=('BSD')
url="http://www.slello.com"
depends=('networkmanager' 'openssh')
source=(10-sshd)
md5sums=('deeda1bd1c20e4cc567b3e8cc091ad3b')

build() {
  cd ${startdir}/pkg
  mkdir -p etc/NetworkManager/dispatcher.d || return 1
  cd etc/NetworkManager/dispatcher.d || return 1
  cp ${startdir}/src/10-sshd . || return 1
  chmod 700 10-sshd || return 1
}
