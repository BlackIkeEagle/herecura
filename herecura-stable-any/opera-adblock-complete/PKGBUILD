# Maintainer: Jeremy Sands cto@jeremysands.com

pkgname=opera-adblock-complete
pkgver=2010.08.23
pkgrel=1
pkgdesc="Fanboy's AdBlock Filterset for Opera including Stat/Tracking Filters"
arch=('i686' 'x86_64')
url="http://www.fanboy.co.nz/adblock/opera/"
license=('cc-by-3.0')
depends=('opera')
source=('urlfilter.ini'
    'fanboy-adblocklist-elements-v3.css')
sha256sums=('0bdf7938dba5266735c2ffd04da22e6fa1e509ba24c10fbf22dba49508fef84b'
            '05df66de674805111672927098c57132366228598f378bf3f460517743373079')

build() {
  cd "$startdir"/src/
  mkdir -p "$startdir"/pkg/usr/share/"$pkgname"/
  install -m644 urlfilter.ini "$startdir"/pkg/usr/share/"$pkgname"/urlfilter.ini
  install -m644 fanboy-adblocklist-elements-v3.css "$startdir"/pkg/usr/share/"$pkgname"/adblock-elements.css
}
install=${pkgname}.install

