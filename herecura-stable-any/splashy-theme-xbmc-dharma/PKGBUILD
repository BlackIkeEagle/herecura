# thanx to Haggy for original xbmc splashy theme
# Contributor: Ralf Barth <archlinux dot org at haggy dot org>

pkgname=splashy-theme-xbmc-dharma
pkgver=1.1
pkgrel=1
pkgdesc="Splashy theme for xbmc"
license=('custom')
arch=('any')
url="http://www.xbmc.org"
depends=('splashy')
conflicts=()
source=('background.png' 
        'theme.xml' 
        'FreeSans.ttf')
sha256sums=('5ecb8f72c3833dbd150224a564c423bec2bf99e30fadc6df492f9d369b7bf6d0'
            '4416d9d452eb9e988bc7fc75eb684cdfe92d231d06fedc07ed2e348f30249a55'
            '3b18573059ddc34ab48046706fdbcabd1df56623247492c704a064d2e998bfce')

build() {
  install -m 644 -D background.png $pkgdir/usr/share/splashy/themes/xbmc-dharma/background.png
  install -m 644 -D theme.xml $pkgdir/usr/share/splashy/themes/xbmc-dharma/theme.xml
  install -m 644 -D FreeSans.ttf $pkgdir/usr/share/splashy/themes/xbmc-dharma/FreeSans.ttf
}
