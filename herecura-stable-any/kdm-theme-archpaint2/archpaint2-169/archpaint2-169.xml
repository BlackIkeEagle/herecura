<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE greeter SYSTEM "greeter.dtd">

<greeter id="theme">
	<style font="Sans 9" window-text-color="#FFFFFF"
	       alpha="0" base-color="#ffffff" alternate-base-color="#ffffff"
	       text-color="#000000" disabled-text-color="#808080"/>
	<item type="svg" id="background" background="true">
		<normal file="background.png"/>
		<pos anchor="c" x="50%" y="50%" width="100%" height="100%"/>
	</item>
	<item type="rect" id="greeter">
		<pos y="70%" x="0" anchor="nw" width="100%" height="200"/>

		<fixed>
			<item type="svg">
				<normal file="box.svg" element="top"/>
				<pos anchor="nw" x="0" y="0" width="100%" height="16"/>
			</item>
			<item type="svg">
				<normal file="box.svg" element="center"/>
				<pos anchor="nw" x="0" y="16" width="100%" height="100"/>
			</item>
			<item type="svg">
				<normal file="box.svg" element="bottom"/>
				<pos anchor="nw" x="0" y="116" width="100%" height="15"/>
			</item>
			
			<item type="pixmap">
				<normal file="username.png" element="userinp"/>
				<pos x="50%" y="40" anchor="c" width="230" height="40"/>
			</item>
			
			<item type="pixmap">
				<normal file="password.png" element="passinp"/>
				<pos x="50%" y="90" anchor="c" width="230" height="40"/>
			</item>
	
			<item type="entry" id="user-entry">
				<pos x="51%" y="40" anchor="c" width="180" height="23"/>
			</item>

			<item type="entry" id="pw-entry">
				<pos x="51%" y="90" anchor="c" width="180" height="23"/>
			</item>
			
			<item type="label" id="caps-lock-warning">
				<pos anchor="c" x="70%" y="50%" expand="false"/>
				<normal color="#C83225" font="Sans Bold 9"/>
				<stock type="caps-lock-warning"/>
			</item>	

		</fixed>

	</item>

	<!-- bottom bar and session buttons -->
	<item type="rect" id="footer">
		<pos y="95%" x="98%" anchor="e" width="350" height="65"/>
		<box orientation="horizontal" spacing="0" xpadding="0">
			<item type="rect" id="session_button" button="true">
				<pos y="50%" anchor="w" width="175" height="box"/>
				<box orientation="horizontal" spacing="10" xpadding="15">
				        <item type="pixmap">
						<normal file="session.png" tint="#ffffff"/>
						<prelight file="session.png"/>
						<active file="session.png" tint="#ffffff"/>
					</item>
					<item type="label">
						<normal color="#FFFFFF" font="Sans Bold 9"/>
						<prelight color="#FFFFFF" font="Sans Bold 9"/>
						<active color="#FFFFFF" font="Sans Bold 9"/>
						<stock type="session"/>
						<pos y="50%" anchor="w"/>
					</item>
				</box>
			</item>
			<item type="rect" id="system_button" button="true">
				<show modes="console" type="system"/>
				<pos y="50%" anchor="w" width="175" height="box"/>
				<box orientation="horizontal" spacing="10" xpadding="15">
					<item type="pixmap">
						<normal file="system.png" tint="#ffffff"/>
						<prelight file="system.png"/>
						<active file="system.png" tint="#ffffff"/>
					</item>
					<item type="label">
						<normal color="#FFFFFF" font="Sans Bold 9"/>
						<prelight color="#FFFFFF" font="Sans Bold 9"/>
						<active color="#FFFFFF" font="Sans Bold 9"/>
						<stock type="system"/>
						<pos y="50%" anchor="w"/>
					</item>
				</box>
			</item>
		</box>
	</item>

</greeter>
