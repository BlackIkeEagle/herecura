# Archlinux buildscript for nntpgrab

# Contributor: BlackEagle <ike.devolder@scarlet.be>
pkgname=nntpgrab
pkgver=0.6.2
pkgrel=3
pkgdesc="NNTPGrab is an open source usenet download program"
arch=('i686' 'x86_64')
url="http://www.nntpgrab.nl/"
license="gpl2"
depends=('gtk2' 'libxml2' 'libxslt' 'openssl' 'sqlite3' 'par2cmdline' 'unrar' 'gtkhtml' 'intltool' 'libsoup')
optdepends=('libnotify: show notifications in your systemtray'
			'policykit: enable automatic shutdown')
makedepends=('pkgconfig')
source=("http://openftd.mirrors.sebsoft.nl/${pkgname}/${pkgname}-${pkgver}.tar.bz2")
md5sums=('4cf166b3930699078c73a1771a3d2382')

build()
{
	PKG_CONFIG_PATH=$PKG_CONFIG_PATH:/usr/lib/pkgconfig
	cd ${pkgname}-${pkgver}
	./configure --prefix=/usr || return 1
	make || return 1
}

package() {
	cd ${pkgname}-${pkgver}
	make DESTDIR=${pkgdir} install
}
