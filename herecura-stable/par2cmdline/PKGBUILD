build() {
	cd ${pkgname}-${pkgver}
	for patch in ${startdir}/[0-9][0-9]*.patch; do
		msg ${patch}
		patch -Np1 -i ${patch}
	done
	msg "Configure"
	./configure --prefix=/usr
	msg "Make"
	make
}

package() {
	cd ${pkgname}-${pkgver}
	make DESTDIR=$startdir/pkg install
}
