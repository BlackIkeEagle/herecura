# Contributor: Nicoco
 pkgname=kde3-ksubtile
 _pkgname=ksubtile
 pkgver=1.3
 pkgrel=3
 pkgdesc="KDE subtitles editor"
 arch=('i686' 'x86_64')
 url="http://ksubtile.sourceforge.net/"
 license="GPL"
 depends=('kdelibs3')
 source=(http://downloads.sourceforge.net/ksubtile/$_pkgname-$pkgver.tar.bz2)
 md5sums=('51a37115d22ac4d178f019fae8d53c77')
 
 build() {
    source /etc/profile.d/qt3.sh
    source /etc/profile.d/kde3.sh
    cd $startdir/src/$_pkgname-$pkgver
    ./configure --prefix=/opt/kde --with-qt-dir=/opt/qt --without-arts
    make || return 1
    make DESTDIR=$startdir/pkg install
 }
