# Contributor: Dylon Edwards <deltaecho@archlinux.us>

pkgname=kcm-wacomtablet
pkgver=1.2.1
pkgrel=1
url="http://www.kde-apps.org/content/show.php/kcm+tablet?content=114856&PHPSESSID=25cb223ad559721559c462fa6deb1f1a"
pkgdesc="This module implements a GUI for the Wacom Linux Drivers and extends it with profile support to handle different button / pen layouts per profile."
license=('GPLv2')
arch=('x86_64' 'i686')
source=("http://www.kde-apps.org/CONTENT/content-files/114856-kcm-tablet-${pkgver}.tar.gz")
md5sums=('174c0b9a7e9a390a30d007b7da741ed7')
depends=('kdelibs')
makedepends=('cmake' 'automoc4')
conflicts=('kcm_tablet-svn kde-wacomtablet-svn')
replaces=('kcm_tablet')

build()  {	
	cd ${srcdir}/kcm-tablet
	cmake -DCMAKE_INSTALL_PREFIX=/usr \
	      -DCMAKE_BUILD_TYPE=Release
	make
}

package() {
	cd ${srcdir}/kcm-tablet
	make DESTDIR=${pkgdir} install
}
