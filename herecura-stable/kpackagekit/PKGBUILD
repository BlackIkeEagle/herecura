pkgname=kpackagekit
pkgver=0.6.3.2
pkgrel=1
pkgdesc="KDE tools for PackageKit"
arch=('i686' 'x86_64')
url="http://www.kde-apps.org/content/show.php/KPackageKit?content=84745"
license=('GPL')
depends=('kdelibs' 'packagekit-qt>=0.6.11')
makedepends=('cmake' 'automoc4')
source=(http://kde-apps.org/CONTENT/content-files/84745-${pkgname}-${pkgver}.tar.bz2)
sha256sums=('ab75d88f916aed8a39c8e58a59ad9dcd8ce008cd9e09ae3283d9c0886ce895b2')

build() {
	cd ${pkgname}-${pkgver}
	[ -d "build" ] && rm -rf build
	mkdir build
	cd build

	cmake ../ \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr
	make
}

package() {
	cd ${pkgname}-${pkgver}
	cd build
	make DESTDIR=${pkgdir} install
}
