# Contributor: Kao Dome <kaodome@gmail.com>
# Contributor: Dmitrij D. Czarkoff <czarkoff@gmail.com>
# Contributor: Mathias Rohnstock <linksoft@gmx.de>
pkgname=libmicrohttpd
pkgver=0.9.0
pkgrel=2
pkgdesc="a small C library that is supposed to make it easy to run an HTTP server as part of another application."
arch=('i686' 'x86_64')
url="http://www.gnu.org/software/libmicrohttpd/"
license=('LGPL')
options=(!libtool)
depends=('gnutls')
source=(ftp://ftp.gnu.org/gnu/libmicrohttpd/$pkgname-$pkgver.tar.gz)
sha256sums=('106f0599d60c9caaee36334d96cc4198ed6d392b1a45523e46f226bd24a680d5')

build() {
	cd ${pkgname}-${pkgver}
	./configure --prefix=/usr --disable-dependency-tracking --enable-largefile --enable-curl --enable-messages --with-pic
	make || return 1
}

package() {
	cd ${pkgname}-${pkgver}
	make DESTDIR=${pkgdir} install || return 1
	install -Dm644 ${srcdir}/${pkgname}-${pkgver}/src/include/platform.h \
		${pkgdir}/usr/include/platform.h || return 1
	install -Dm644 ${srcdir}/${pkgname}-${pkgver}/src/include/plibc.h \
		${pkgdir}/usr/include/plibc.h || return 1
}
