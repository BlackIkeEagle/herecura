# Maintainer: BlackEagle < ike DOT devolder AT gmail DOT com >
pkgname=php-mongo
pkgver=1.0.10
_githash='7ac74f1adb06dd9e1fefc1fd7a87a7ca1201d183'
_hash='7ac74f1'
pkgrel=1
pkgdesc="Officially supported PHP driver for MongoDB"
arch=("i686" "x86_64")
url="http://www.mongodb.org/display/DOCS/PHP+Language+Center"
license=("APACHE")
depends=("php" "mongodb>=1.6.0")
backup=("etc/php/conf.d/mongo.ini")
source=("${pkgname}-${pkgver}.tar.gz::http://github.com/mongodb/mongo-php-driver/tarball/${_githash}"
		"mongo.ini")
sha256sums=('cc9882d374362b7540c8a7b0582f020cf70b5f18e33925d0cf7336f233ff19b3'
            'c89685eee842d5c3a85149a5bb8e310e62bf1a17f94183bb66401593ab2b191b')

build() {
	cd mongodb-mongo-php-driver-${_hash}
	phpize
	./configure --prefix=/usr --enable-mongo
	make INSTALL_ROOT=$pkgdir install
	install -Dm644 $srcdir/mongo.ini "$pkgdir/etc/php/conf.d/mongo.ini"
}
