# Maintainer: BlackEagle < ike DOT devolder AT gmail DOT com >
pkgname=php-mongo
pkgver=1.1.3
_githash='747608f4a14b1c94eee2d8e68d5b499c80d983d6'
_hash='747608f'
pkgrel=1
pkgdesc="Officially supported PHP driver for MongoDB"
arch=("i686" "x86_64")
url="http://www.mongodb.org/display/DOCS/PHP+Language+Center"
license=("APACHE")
depends=("php")
backup=("etc/php/conf.d/mongo.ini")
#source=("${pkgname}-${pkgver}.tar.gz::http://github.com/mongodb/mongo-php-driver/tarball/${_githash}"
		#"mongo.ini")
source=("mongo.ini")
sha256sums=('c89685eee842d5c3a85149a5bb8e310e62bf1a17f94183bb66401593ab2b191b')

build() {
	# github certificate workaround
	wget --no-check-certificate https://github.com/mongodb/mongo-php-driver/tarball/${_githash} -O ${SRCDEST}/${pkgname}-${pkgver}.tar.gz
	tar -zxf ${SRCDEST}/${pkgname}-${pkgver}.tar.gz
	# end github certificate workaround
	cd mongodb-mongo-php-driver-${_hash}
	phpize
	./configure --prefix=/usr --enable-mongo
	make INSTALL_ROOT=$pkgdir install
	install -Dm644 $srcdir/mongo.ini "$pkgdir/etc/php/conf.d/mongo.ini"
}
