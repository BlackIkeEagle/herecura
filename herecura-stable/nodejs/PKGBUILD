# Contributor: James Campos   <james.r.campos@gmail.com>
# Contributor: Dongsheng Cai <dongsheng at moodle dot com>
# Contributor: Masutu Subric <masutu.arch at googlemail dot com>
pkgname=nodejs
pkgver=0.1.103
pkgrel=1
pkgdesc="Evented I/O for V8 javascript"
arch=('i686' 'x86_64')
url="http://nodejs.org/"
license=('custom:nodejs')
depends=('openssl')
source=("http://nodejs.org/dist/node-v$pkgver.tar.gz")
sha256sums=('7482b898a0f9514c74137b490c3ad0810ee5ce1586e8886c5182f6446e56711e')

build() {
    cd node-v${pkgver}
    ./configure --prefix=/usr/
    make
}

package() {
    cd node-v${pkgver}
    tools/waf-light install --destdir=${pkgdir}
    install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
    install -D -m644 ChangeLog ${pkgdir}/usr/share/${pkgname}/ChangeLog
    install -D -m644 README ${pkgdir}/usr/share/${pkgname}/README
}
