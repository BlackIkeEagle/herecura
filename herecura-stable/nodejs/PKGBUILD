pkgname=nodejs
pkgver=0.4.4
pkgrel=1
pkgdesc="Evented I/O for V8 javascript"
arch=('i686' 'x86_64')
url="http://nodejs.org/"
license=('MIT')
depends=('python2')
optdepends=('openssl: TLS support')
conflicts=('nodejs-unstable')
source=("http://nodejs.org/dist/node-v$pkgver.tar.gz")
sha256sums=('ea4430909601340cb3e8adb15569facfeca4e1d59129f1932254535bb4bf3e17')

build() {
  cd "node-v$pkgver"

  # python2 fix
  for file in $(find . -name '*.py' -print) wscript tools/waf-light tools/node-waf; do
    sed -i 's_^#!.*/usr/bin/python_#!/usr/bin/python2_' "$file"
    sed -i 's_^#!.*/usr/bin/env.*python_#!/usr/bin/env python2_' "$file"
  done
  sed -i "s|cmd_R = 'python |cmd_R = 'python2 |" wscript
  sed -i "s|python |python2 |" Makefile

  ./configure --prefix=/usr
  make
}

package() {
  cd "node-v$pkgver"

  make DESTDIR="$pkgdir/" install
  install -D -m644 LICENSE $pkgdir/usr/share/licenses/${pkgname}/LICENSE
}

