# Contributor: Masutu Subric <masutu.arch at googlemail dot com>
pkgname=nodejs
pkgver=0.2.1
pkgrel=1
pkgdesc="Evented I/O for V8 javascript"
arch=('i686' 'x86_64')
url="http://nodejs.org/"
license=('custom:nodejs')
depends=('openssl' 'python')
source=("http://nodejs.org/dist/node-v$pkgver.tar.gz")
sha256sums=('5bb7d084b2138ce43fcb34739ed894379c450a1dd569a1c710405bc39d2861c2')

build() {
    cd node-v${pkgver}
    ./configure --prefix=/usr
    make
    tools/waf-light install --destdir=$pkgdir
    install -Dm644 LICENSE $pkgdir/usr/share/licenses/${pkgname}/LICENSE
    install -Dm644 ChangeLog $pkgdir/usr/share/${pkgname}/ChangeLog
    install -Dm644 README $pkgdir/usr/share/${pkgname}/README
}
