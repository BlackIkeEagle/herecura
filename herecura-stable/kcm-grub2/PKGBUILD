# Maintainer: BlackEagle < ike DOT devolder AT gmail DOT com >

pkgname=kcm-grub2
pkgver=0.4.5
pkgdesc="This Kcm module manages the most common settings of Grub2."
pkgrel=1
arch=('i686' 'x86_64')
_kdeapps=139643
url="http://kde-apps.org/content/show.php?content=${_kdeapps}"
license=(GPLv3)
makedepends=('cmake' 'automoc4')
depends=('kdebase-workspace');
options=()
source=("${pkgname}-${pkgver}.tar.gz::http://kde-apps.org/CONTENT/content-files/${_kdeapps}-${pkgname}-${pkgver}.tar.gz")
sha256sums=('56b1552640d78659af5ab892eba7c46d2c21ac17e8e16d084697af6f03d942ab')

build(){	
  cd ${pkgname}-${pkgver}
  cmake -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release
  make
}
package(){
  cd ${pkgname}-${pkgver}
  make DESTDIR="${pkgdir}" install
}
