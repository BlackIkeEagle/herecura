# Maintainer: BlackEagle < ike DOT devolder AT gmail DOT com >

pkgname=kcm-grub2
pkgver=0.3.6
pkgdesc="This Kcm module manages the most common settings of Grub2."
pkgrel=1
arch=('i686' 'x86_64')
_kdeapps=139643
url="http://kde-apps.org/content/show.php?content=${_kdeapps}"
license=(GPLv3)
makedepends=('cmake' 'automoc4')
depends=('kdebase-workspace');
options=()
source=("${pkgname}-${pkgver}.tar.gz::http://kde-apps.org/CONTENT/content-files/${_kdeapps}-${pkgname}-${pkgver}.tar.gz")
sha256sums=('37bd7cd80cc7e1ea5988638b835d470bd5b0693cb9447d229926d1e17e6904dd')

build(){	
  cd ${pkgname}-${pkgver}
  cmake -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release
  make
}
package(){
  cd ${pkgname}-${pkgver}
  make DESTDIR="${pkgdir}" install
}
