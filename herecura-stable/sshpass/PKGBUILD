# Contributor: Sebastien Vasey sebastien dot vasey at gmail dot com

pkgname=sshpass
pkgver=1.04
pkgrel=1
pkgdesc="Fool ssh into accepting an interactive password non-interactively"
arch=(i686 x86_64)
url="http://sourceforge.net/projects/sshpass/"
license=('GPL')
depends=('openssh')
source=(http://downloads.sourceforge.net/sshpass/sshpass-1.04.tar.gz)
md5sums=('87e7c72e319691c5fdf219f6c7effb4a')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir/" install
}

