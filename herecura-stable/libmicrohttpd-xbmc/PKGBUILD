# Contributor: Kao Dome <kaodome@gmail.com>
# Contributor: Dmitrij D. Czarkoff <czarkoff@gmail.com>
# Contributor: Mathias Rohnstock <linksoft@gmx.de>
pkgname=libmicrohttpd-xbmc
pkgver=0.4.6
pkgrel=1
pkgdesc="a small C library that is supposed to make it easy to run an HTTP server as part of another application. for XBMC"
arch=('i686' 'x86_64')
url="http://www.gnu.org/software/libmicrohttpd/"
license=('LGPL')
options=(!libtool)
conflicts=('libmicrohttpd')
depends=('gnutls')
source=(ftp://ftp.gnu.org/gnu/libmicrohttpd/${pkgname/-xbmc/}-${pkgver}.tar.gz)
sha256sums=('0cb09e26678d1531a4fd40a748abff5142bfdad3ae11cfe3bb7ad7317a99e371')

build() {
	cd ${pkgname/-xbmc/}-${pkgver}
	./configure --prefix=/usr --disable-dependency-tracking --enable-largefile --enable-curl --enable-messages --with-pic
	make
}

package() {
	cd ${pkgname/-xbmc/}-${pkgver}
	make DESTDIR=${pkgdir} install
	#install -Dm644 ${srcdir}/${pkgname}-${pkgver}/src/include/platform.h \
		#${pkgdir}/usr/include/platform.h
	#install -Dm644 ${srcdir}/${pkgname}-${pkgver}/src/include/plibc/plibc.h \
		#${pkgdir}/usr/include/plibc/plibc.h
}
