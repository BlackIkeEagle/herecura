pkgver=7.3f
pkgrel=1
_versiondir=vim${pkgver/./}
arch=('i686' 'x86_64')
license=('custom:vim')
url="http://www.vim.org"
makedepends=('gpm' 'perl' 'python' 'ruby' 'lua' 'libxt' 'desktop-file-utils' 'gtk2'
             'gettext' 'pkgconfig' 'sed')
options=(force)
source=('vimrc' 'archlinux.vim' 'gvim.desktop' 'license.txt'
        "ftp://ftp.nluug.nl/pub/vim/unstable/unix/${pkgbase}-${pkgver}.tar.bz2")
