# Contributor: Andrea Scarpino <andrea@archlinux.org>

pkgname=kftpgrabber-svn
pkgver=1158150
pkgrel=1
pkgdesc="A graphical FTP client for KDE"
url="http://kftp.org"
arch=('i686' 'x86_64')
license=('GPL')
conflicts=('kftpgrabber')
provides=('kftpgrabber')
depends=('kdebase-runtime' 'kdelibs' 'libssh2')
makedepends=('subversion' 'cmake' 'automoc4')
source=()
md5sums=()

_svntrunk=svn://anonsvn.kde.org/home/kde/trunk/extragear/network/kftpgrabber/
_svnmod=kftpgrabber

build() {
  cd $srcdir

  if [ -d $_svnmod/.svn ]; then
    (cd $_svnmod && svn up -r $pkgver)
  else
    svn co $_svntrunk --config-dir ./ $_svnmod
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  mkdir build
  cd build
  cmake ../$_svnmod \
    -DCMAKE_INSTALL_PREFIX=`kde4-config --prefix` \
    -DCMAKE_BUILD_TYPE=Release
  make  || return 1
}

package() {
  cd ${srcdir}/build
  make DESTDIR=$pkgdir install || return 1

  rm -rf ${srcdir}/build
}
