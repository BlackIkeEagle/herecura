# Maintainer: ruario 
# Contributor: Skunnyk
# Contributor: totoloco
pkgname=opera-devel
_bigrelease=10.70
_buildver=9044
_randomizer=accordion
pkgver=${_bigrelease}_${_buildver}
pkgrel=1
pkgdesc="A fast and secure web browser and Internet suite. Development/Snapshot version."
url="http://my.opera.com/desktopteam/blog/"
depends=('gcc-libs' 'gstreamer0.10-good-plugins' 'libxt' 'freetype2' 'libxext')
makedepends=('libarchive')
optdepends=('gtk2: GTK integration'
	    'kdebase-runtime: KDE4 integration'
	    'gstreamer0.10-ffmpeg: HTML5 H.264 support'
	    'gstreamer0.10-bad-plugins: HTML5 H.264 support')
install=${pkgname}.install
options=(!strip !zipman)
license=('custom:opera')
arch=('i686' 'x86_64')
provides=('opera')
conflicts=('opera' 'opera-beta')
_arch=i386
[ "$CARCH" = "x86_64" ] && _arch=x86_64
source=(http://snapshot.opera.com/unix/${_randomizer}_${_bigrelease}-${_buildver}/opera-${_bigrelease}-${_buildver}.${_arch}.linux.tar.xz)
md5sums=('4751da584faf3b288b575e5f6ffd8f60')
[ "$CARCH" = "x86_64" ] && md5sums=('84597ce0aa322dce70c86147922402c1')

build() {
	opera-${_bigrelease}-${_buildver}.${_arch}.linux/install --prefix /usr --repackage ${pkgdir}/usr
	install -D -m 644 ${pkgdir}/usr/share/opera/defaults/license.txt ${pkgdir}/usr/share/licenses/${pkgname}/license.txt
}
