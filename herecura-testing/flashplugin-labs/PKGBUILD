pkgname=flashplugin-labs
_licensefile='PlatformClients_PC_WWEULA_Combined_20100108_1657.pdf'
_basename='flashplayer10'
_builddate=111710
_prerelnm='2'
pkgrel=1
pkgdesc='Adobe Flash Player LABS'
url='http://labs.adobe.com/technologies/flashplayer10/ '
arch=('i686' 'x86_64')
depends=('mozilla-common' 'libxt' 'gtk2' 'nss' 'curl')
replaces=('flashplugin-beta' 'flashplugin' 'flashplugin-square' 'flashplugin-prerelease')
license=('custom')
provides=('flashplugin')

#source=(
#"http://download.macromedia.com/pub/labs/flashplayer10/${_basename}_${_prerelnm}_p2_32bit_linux_${_builddate}.tar.gz"
#"http://download.macromedia.com/pub/labs/flashplayer10/${_basename}_${_prerelnm}_p3_64bit_linux_${_builddate}.tar.gz"
#"http://www.adobe.com/products/eulas/pdfs/${_licensefile}"
#)

if [ "${CARCH}" == 'i686' ]; then
	pkgver=10.2.151.49
	flsource="http://download.macromedia.com/pub/labs/flashplayer10/${_basename}_${_prerelnm}_p2_32bit_linux_${_builddate}.tar.gz"
	flsums='12a648979d16796ae4ee681b8fa90b31bf7c36c11ac7a3653548fce0339ba91f'
elif [ "${CARCH}" == 'x86_64' ]; then
	pkgver=10.3.162.29
	flsource="http://download.macromedia.com/pub/labs/flashplayer10/${_basename}_${_prerelnm}_p3_64bit_linux_${_builddate}.tar.gz"
	flsums='ef05f679f8977144621560587ffdf9bc81812e9941dea422e977070c9cd05ff0'
fi

source=("${flsource}"
	"http://www.adobe.com/products/eulas/pdfs/${_licensefile}")
sha256sums=("${flsums}"
	'3cb0a5f4576be735abcff7189ed18eda17c70b762c3a78a3379b6f44395fbc10')

build() {
  install -d -m755 ${pkgdir}/usr/lib/mozilla/plugins/
  install -m755 ${srcdir}/libflashplayer.so ${pkgdir}/usr/lib/mozilla/plugins/
  install -d -m755 "${pkgdir}"/usr/share/licenses/${pkgname}/
  install -m644 "${_licensefile}" "${pkgdir}"/usr/share/licenses/${pkgname}/LICENSE.pdf
}
