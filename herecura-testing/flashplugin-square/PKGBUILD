pkgname=flashplugin-square
_licensefile='Reader_Player_AIR_WWEULA-Combined-20080204_1313.pdf'
pkgver=10.2.161.22
pkgrel=1
pkgdesc='Adobe Flash Player x86_64'
url='http://labs.adobe.com/technologies/flashplayer10/ '
arch=('i686' 'x86_64')
depends=('mozilla-common' 'libxt' 'gtk2' 'nss' 'curl')
replaces=('flashplugin-beta' 'flashplugin')
license=('custom')
provides=('flashplugin')
#source=(
#"http://download.macromedia.com/pub/labs/flashplayer10/flashplayer_square_p1_32bit_linux_091510.tar.gz"
#"http://download.macromedia.com/pub/labs/flashplayer10/flashplayer_square_p1_64bit_linux_091510.tar.gz"
#"http://www.adobe.com/products/eulas/pdfs/${_licensefile}"
#)
_arch='32bit'
[ "${CARCH}" == 'x86_64' ] && _arch='64bit'
source=("http://download.macromedia.com/pub/labs/flashplayer10/flashplayer_square_p1_${_arch}_linux_091510.tar.gz"
		"http://www.adobe.com/products/eulas/pdfs/${_licensefile}")
sha256sums=('b8528f1e34e653bdcb7d0e466bc274047c2878e78e0662b3dbd0b7d6d7034848'
            '80472d96f0b9835e399987849b632c23bd8b20406c7d3fe2313f8cf00e22837e')
[ "${CARCH}" == 'x86_64' ] && sha256sums[0]='8b581da45ea80aa4d83afc94f64bc294e1247cab505829e6c6d13bcebaddf037'

build() {
  install -d -m755 ${pkgdir}/usr/lib/mozilla/plugins/
  install -m755 ${srcdir}/libflashplayer.so ${pkgdir}/usr/lib/mozilla/plugins/
  install -d -m755 "${pkgdir}"/usr/share/licenses/${pkgname}/
  install -m644 "${_licensefile}" "${pkgdir}"/usr/share/licenses/${pkgname}/LICENSE.pdf
}
