_arch='32bit'
[ "${CARCH}" == 'x86_64' ] && _arch='64bit'
source=("http://download.macromedia.com/pub/labs/flashplayer10/${_basename}_${_prerelnm}_${_prerelnr}_${_arch}_linux_${_builddate}.tar.gz"
		"http://www.adobe.com/products/eulas/pdfs/${_licensefile}")
